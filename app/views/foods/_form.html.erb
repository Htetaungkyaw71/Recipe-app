    <%= form.text_field :measurement_unit, class: "form-control mt-2" %>
  </div>
  
  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.text_field :quantity, class: "form-control mt-2" %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, class: "form-control mt-2" %>
