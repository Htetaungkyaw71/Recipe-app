<div class="form">
<div>
  <%= form_with(model: recipee) do |form| %>
    <% if recipee.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(recipee.errors.count, "error") %> prohibited this recipee from being saved:</h2>

        <ul>
          <% recipee.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="input">
      <%= form.label :preparation_time, style: "display: block" %>
      <%= form.number_field :preparation_time, class: "form-control" %>
    </div>

    <div class="input">
      <%= form.label :cooking_time, style: "display: block" %>
      <%= form.number_field :cooking_time, class: "form-control" %>
    </div>

    <div class="input">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="input">
      <%= form.label :public, style: "display: block" %>
      <%= form.check_box :public %>
    </div>

    <div class="input">
      <%= form.submit "Create Recipe", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

</div>


